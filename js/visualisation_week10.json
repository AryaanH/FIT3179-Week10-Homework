{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 500,
    "title": "International Visitor Spending vs. Nights spent in Australia",
    "data": {
        "url": "https://raw.githubusercontent.com/AryaanH/FIT3179-Week10-Homework/refs/heads/main/data/australian_tourism_by_continent.csv",
        "format": {
            "type": "csv"
        }
    },
    "params": [
        {
            "name": "ContinentSelection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Oceania",
                    "Asia",
                    "North America",
                    "Europe",
                    "Other"
                ],
                "labels": [
                    "All",
                    "Oceania",
                    "Asia",
                    "North America",
                    "Europe",
                    "Other"
                ],
                "name": "Continent Select: "
            }
        }
    ],
    "transform": [
        {
            "filter": "ContinentSelection == null || datum.Continent == ContinentSelection"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "circle",
                "tooltip": true
            },
            "encoding": {
                "x": {
                    "field": "Spending",
                    "type": "quantitative",
                    "title": "Total Spending ($M)",
                    "axis": {
                        "grid": false,
                        "tickCount": 5
                    },
                    "scale": {
                        "type": "log",
                        "domain": [
                            100,
                            10000
                        ]
                    }
                },
                "y": {
                    "field": "Nights",
                    "type": "quantitative",
                    "title": "Total Nights (000)",
                    "axis": {
                        "grid": false
                    }
                },
                "size": {
                    "field": "Trips",
                    "type": "quantitative",
                    "scale": {
                        "range": [
                            100,
                            2000
                        ]
                    },
                    "legend": {
                        "title": "Total Visitors (000)"
                    }
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "legend": {
                        "title": "Continent"
                    }
                },
                "tooltip": [
                    {
                        "field": "Countries",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Trips",
                        "type": "quantitative",
                        "title": "Total Visitors (000)"
                    },
                    {
                        "field": "Spending",
                        "type": "quantitative",
                        "title": "Spending ($M)"
                    },
                    {
                        "field": "Nights",
                        "type": "quantitative",
                        "title": "Total Nights (000)"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 12,
                "dy": 2,
                "fontSize": 11,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {
                    "field": "Spending",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Nights",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Countries",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Countries'] == 'New Zealand' || datum['Countries'] == 'China' || datum['Countries'] == 'India' || datum['Countries'] == 'United States of America' || datum['Countries'] == 'Switzerland' || datum['Countries'] == 'United Kingdom'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}